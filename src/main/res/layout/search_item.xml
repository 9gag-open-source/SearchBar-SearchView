<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_item_height"

    android:clickable="true"
    android:focusable="true"

    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/search_icon_1"
        android:layout_width="@dimen/search_icon"
        android:layout_height="match_parent"
        android:contentDescription="@string/search_app_name"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="center" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textIsSelectable="false"
            android:textSize="@dimen/search_text_14" />

        <TextView
            android:id="@+id/search_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textIsSelectable="false"
            android:textSize="@dimen/search_text_12" />

    </LinearLayout>

    <ImageView
        android:id="@+id/search_icon_2"
        android:layout_width="@dimen/search_icon"
        android:layout_height="match_parent"
        android:contentDescription="@string/search_app_name"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="center" />

</LinearLayout>
